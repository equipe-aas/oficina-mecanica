#:set pad 15
#:set spa 15

<Botao@Button>:
    font_size:25
    size_hint_y:None
    height:80

<Entrada@TextInput>:
    font_size:25
    size_hint_y:None
    height:40

<Texto@Label>:
    font_size:25

<MeuBoxLayout@BoxLayout>:
    padding:pad
    spacing:spa

<MeuGridLayout@GridLayout>:
    cols:1
    padding:pad
    spacing:spa

<Menu>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '/home/saucesar/PycharmProjects/oficina-mecanica/GUI/img/logo3.png'
    Screen:
        name:'telaLogin'
        MeuGridLayout:
            MeuBoxLayout:
                Texto:
                    text:'\nLOGIN =>'
                Entrada:
                    id: login
            MeuBoxLayout:
                Texto:
                    text:'\nSENHA =>'
                Entrada:
                    id: senha
                    password: not exibir.active
            MeuBoxLayout:
                Texto:
                    text:'_______________________________________Exibir Senha?'
                CheckBox:
                    id:exibir
            MeuBoxLayout:
                Botao:
                    text:'Entrar'
                    on_release:app.login(login.text,senha.text,login,senha)
                Botao:
                    text:'Sair'
                    on_release:app.stop()
    Screen:
        name:'menu'
        MeuGridLayout:
            MeuGridLayout:
                cols:3
                Botao:
                    text:'Menu\nClientes'
                    on_release:root.current = 'menuCliente'
                Botao:
                    text:'Menu\nFuncionarios'
                Botao:
                    text:'Menu\nFornecedores'
                Botao:
                    text:'Menu\nPecas'
                Botao:
                    text:'Menu\nPedidos'
                Botao:
                    text:'Menu\nServicos'
                Botao:
                    text:'Menu\nVendas'
            MeuBoxLayout:
                Botao:
                    text:'Voltar'
                    on_release:root.current = 'telaLogin'
                Botao:
                    text:'Encerrar'
                    on_release:app.stop()

    Screen:
        name:'menuCliente'
        MeuGridLayout:
            cols:3
            Botao:
                text:'Novo\nCliente'
                on_release:root.current = 'cadastrarCliente'
            Botao:
                text:'Buscar\nCliente'
                on_release:root.current = 'buscarCliente'
            Botao:
                text:'Editar\nCliente'
                on_release:root.current = 'buscarCliente'
            Botao:
                text:'Deletar\nCliente'
                on_release:root.current = 'deletarCliente'
            Botao:
                text:'Listar\nClientes'
                on_release:app.listarClientes(boxClientes)
        Botao
            text:'Menu Pricipal'
            on_release:root.current = 'menu'
    Screen:
        name:'cadastrarCliente'
        MeuGridLayout:
            MeuBoxLayout:
                Texto:
                    text:'CPF : '
                Entrada:
                    id: EntradaCpf
            MeuBoxLayout:
                Texto:
                    text:'NOME : '
                Entrada:
                    id: EntradaNome
            MeuBoxLayout:
                Texto:
                    text:'ENDERECO : '
                Entrada:
                    id: EntradaEndereco
            MeuBoxLayout:
                Texto:
                    text:'TELEFONE : '
                Entrada:
                    id: EntradaTelefone
            MeuBoxLayout:
                Botao:
                    text:'Salvar'
                    on_release:app.cadastrarCliente(EntradaCpf,EntradaNome,EntradaEndereco,EntradaTelefone)
                Botao:
                    text:'Voltar'
                    on_release:root.current = 'menuCliente'
    Screen:
        name:'editarCliente'
        MeuGridLayout:
            MeuBoxLayout:
                Texto:
                    text:'CPF : '
                Entrada:
                    id: EditarCpf
                    text: app.getCliente().cpf
                    disabled: True
            MeuBoxLayout:
                Texto:
                    text:'NOME : '
                Entrada:
                    id: EditarNome
                    text: app.getCliente().nome
            MeuBoxLayout:
                Texto:
                    text:'ENDERECO : '
                Entrada:
                    id: EditarEndereco
                    text: app.getCliente().endereco
            MeuBoxLayout:
                Texto:
                    text:'TELEFONE : '
                Entrada:
                    id: EditarTelefone
                    text: app.getCliente().telefone
            MeuBoxLayout:
                Botao:
                    text:'Salvar'
                    on_release:app.editarCliente(EditarCpf.text,EditarNome.text,EditarEndereco.text,EditarTelefone.text)
                Botao:
                    text:'Voltar'
                    on_release:root.current = 'menuCliente'
    Screen:
        name:'buscarCliente'
        MeuGridLayout:
            MeuBoxLayout:
                Texto:
                    text:'\n\n\n\n\nCPF : '
                Entrada:
                    id: BuscarCpf
            MeuBoxLayout:
                Botao:
                    text:'Buscar'
                    on_release: app.buscarCliente(BuscarCpf,EditarCpf,EditarNome,EditarEndereco,EditarTelefone)
                Botao:
                    text:'Voltar'
                    on_release:root.current = 'menuCliente'
    Screen:
        name:'deletarCliente'
        MeuGridLayout:
            MeuBoxLayout:
                Texto:
                    text:'\n\n\n\n\nCPF : '
                Entrada:
                    id: DeletarCpf
            MeuBoxLayout:
                Botao:
                    text:'Deletar ?'
                    on_release: app.deletarCliente(DeletarCpf)
                Botao:
                    text:'Voltar'
                    on_release:root.current = 'menuCliente'

    Screen:
        name:'listarClientes'
        MeuBoxLayout:
            orientation:'vertical'
            ScrollView:
                MeuBoxLayout:
                    id:boxClientes
                    orientation:'vertical'
                    height:self.minimum_height
                    size_hint_y:None
            Botao:
                text:'Voltar'
                on_release:root.current = 'menuCliente'