<Tela>:
    cols:1
    padding:10
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/logo3.png'
    BoxLayout:
        Label:
            text:'\nLOGIN =>'
            font_size:40
        TextInput:
            id: login
            size_hint_y:None
            font_size:40
    BoxLayout:

        Label:
            text:'\nSENHA =>'
            font_size:40
        TextInput:
            id: senha
            password: not exibir.active
            size_hint_y:None
            font_size:40
    BoxLayout:
        Label:
            text:'______________________________________________________________________________________________Exibir Senha?'
        CheckBox:
            id:exibir
    BoxLayout:
        Button:
            text:'Entrar'
            font_size:40
            size_hint_y:None
            on_release:app.login(login.text,senha.text)
        Button:
            text:'Sair'
            font_size:40
            size_hint_y:None
            on_release:app.stop()